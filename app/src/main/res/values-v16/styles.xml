<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">@color/keep</item>
        <item name="android:colorAccent">@color/keep</item>
        <item name="android:statusBarColor">@color/keep</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ToolBarTheme" parent="android:Theme.WithActionBar">
        <item name="android:background">@color/keep</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:titleTextStyle">@style/titleTextStyle</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="titleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!-- タイトルバーの文字色 -->
        <item name="android:textColor">#E67E22</item>
        <!-- タイトルバーの文字スタイル -->
        <item name="android:textStyle">italic</item>
    </style>
    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item></style>
</resources>
